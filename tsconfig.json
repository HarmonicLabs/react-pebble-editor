{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist",
      "emitDeclarationOnly": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src", "src/types"],
    "exclude": ["node_modules", "dist"]
  }